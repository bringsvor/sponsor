        <!-- action_add_sponsorship -->
        <record id="action_add_sponsorship" model="ir.actions.act_window">
            <field name="name">Sponsorship</field>
            <field name="res_model">add_sponsorship_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sponsorship_wizard"/>
            <field name="target">new</field>
        </record>

        <record model="ir.ui.view" id="view_partner_form">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">

                    <page string="Sponsorship">
                        <group cols="4">
                            <field name="sponsor" readonly="1"/>
                            <field name="sponsored_child" readonly="1"/>
                         </group>
                        <group colspan="1"  attrs="{'invisible':[('sponsor','!=',True)]}">
                            <label for="sponsored_children" />
                                <field name="sponsored_children" nolabel="1"/>
                               <field name="mailing_address" />
                            <!-- Fadderbevis -->
                                <group  attrs="{'invisible': [ ('mailing_address', '=', False)]}">
                                            <label for="street" string="Mailing Address"/>
                            <div>
                                <field name="mailing_name" placeholder="Name...." />
                                <field name="mailing_street" placeholder="Street..."   />
                                <field name="mailing_street2"  />
                                <div class="address_format">
                                    <!-- attrs="{'readonly': [('use_parent_address','=',True)]}" -->
                                    <field name="mailing_city" placeholder="City" style="width: 40%%" />
                                    <field name="mailing_state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' on_change="onchange_state(state_id)" />
                                    <field name="mailing_zip" placeholder="ZIP" style="width: 20%%" />
                                </div>
                                <field name="mailing_country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True}' />
                            </div>
                    </group>

                    </group>
                    <group colspan="2" attrs="{'invisible':[('sponsored_child','!=',True)]}">
                        <field name="gender" widget="selection" />
                            <field name="date_of_birth" />
                            <field name="birthyear" />
                            <field name="school" />
                            <field name="school_class" />
                            <field name="text_info_eng" />
                            <field name="text_info_nor" />
                            <field name="village" />
                            <field name="needs_sponsor" readonly="1"/>
                            <group col="2" string="Parents">
                                <field name="parent_1" />
                                <field name="parent_2" />
                            </group>
                        <field name="sponsors" colspan="4" nolabel="1"
               context="{'form_view_ref' : 'sponsor.sponsorship_form_view', 'tree_view_ref' : 'sponsor.list_sponsorship_sponsor'}"/>
                    </group>
<!--    <button name="%(action_add_sponsorship)d" type="action" string="Add sponsorship" class="oe_highlight" attrs="{'invisible':[('sponsor','!=',True)]}" /> -->
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="view_child_form">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="view_partner_form"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="before">
                    <field name="ref" placeholder="Reference..." />
                </field>
                <field name="category_id" position="after">
                    <field name="village" placeholder="Village...." />
                </field>
            </field>
        </record>


        <record id="Xview_sponsor_property_form" model="ir.ui.view">
            <!-- <field name="name">res.partner.property.form.inherit</field> -->
            <field name="name">Sponsor formt</field>
            <field name="model">res.partner</field>
            <field name="priority">3</field>
            <!-- <field name="inherit_id" ref="base.view_partner_form" /> -->
            <field name="arch" type="xml">
		<form>
                <!-- <button name="action_add_sponsorship" type="object" string="Add sponsorship" attrs="{'invisible':['|',('sent','=',True), ('state', '!=', 'open')]}" class="oe_highlight" groups="base.group_user"/> -->
