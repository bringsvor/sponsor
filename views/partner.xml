<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_sponsored_child_property_form" model="ir.ui.view">
            <field name="name">Sponsored Child</field>
            <field name="model">sponsored_child</field>
            <field name="priority">3</field>
            <!-- <field name="inherit_id" ref="base.view_partner_form"/> -->
            <field name="arch" type="xml">
                <form>
                    <group colspan="2">
                    <field name="name" />
                    <field name="gender" widget="selection" />
                    <field name="date_of_birth" />
                    </group>
                    <label for="sponsorships" />

                    <field name="sponsors" colspan="4" nolabel="1"
       context="{'form_view_ref' : 'sponsor.sponsorship_form_view', 'tree_view_ref' : 'sponsor.list_sponsorship_sponsor'}"/>
                <!--
                    <page string="Sponsorship" col="4" name="sponsorship">
                        <group col="4"> -->
                    <group colspan="2">

                            <field name="school" />
                            <field name="school_class" />
                    </group>
<!--                            <field name="sponsor_id" /> -->
<!--                        </group> -->
                        <group col="2">
                            <field name="text_info_eng" />
                            <field name="text_info_nor" />
                            <field name="village_info" />
                            <field name="needs_sponsor" readonly="1"/>
                        </group>
                        <group col="2" string="Parents">
                            <field name="parent_1" />
                            <field name="parent_2" />
                        </group>
<!--                    </page>
                </page> -->
                </form>
            </field>
            </record>

        <!-- wizard -->

       <record id="view_sponsorship_wizard" model="ir.ui.view">
            <field name="name">sponsorship.form</field>
            <field name="model">add_sponsorship_wizard</field>
            <field name="arch" type="xml">
                <form string="Sponsorships">
                    <group>
                        <label for="sponsor"/>
                        <div>
                            <!-- <field name="sponsor_id" /> -->
                            <label for="child_id" />
                            <field name="child_id"/>
                            <label for="start_date" />
                            <field name="start_date" />
                            <label for="end_date" />
                            <field name="end_date" />
<!--                            <field name="sponsor" on_change="onchange_fiscalyear(fiscalyear)" class="oe_inline"/> -->
<!--                            <label align="0.7" string="(If you do not select a specific fiscal year, all open fiscal years will be selected.)" class="oe_inline"/> -->
                        </div>
                    </group>
                    <footer>
                        <button string="Create" name="data_save" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- action_add_sponsorship -->
        <record id="action_add_sponsorship" model="ir.actions.act_window">
            <field name="name">Sponsorship</field>
            <field name="res_model">add_sponsorship_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sponsorship_wizard"/>
            <field name="target">new</field>
        </record>


        <record id="view_sponsor_property_form" model="ir.ui.view">
            <!-- <field name="name">res.partner.property.form.inherit</field> -->
            <field name="name">Sponsor formt</field>
            <field name="model">sponsor</field>
            <field name="priority">3</field>
            <!-- <field name="inherit_id" ref="base.view_partner_form" /> -->
            <field name="arch" type="xml">
		<form>
                <!-- <button name="action_add_sponsorship" type="object" string="Add sponsorship" attrs="{'invisible':['|',('sent','=',True), ('state', '!=', 'open')]}" class="oe_highlight" groups="base.group_user"/> -->
            <!-- button can be type="object" -->
                <button name="%(action_add_sponsorship)d" type="action" string="Add sponsorship" class="oe_highlight" />
<!--                <page string="Accounting" col="4" name="accounting" attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}" groups="account.group_account_invoice">
 -->
            <sheet>

            <field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                <div class="oe_title oe_left">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" />
                        </h1>
                </div>

                <!-- Faktura adresse -->
                <div class="oe_right oe_button_box" name="buttons"> </div>
                <group>
                                            <label for="street" string="Address"/>
                            <div>
                                <field name="street" placeholder="Street..."   />
                                <field name="street2"  />
                                <div class="address_format">
                                    <!-- attrs="{'readonly': [('use_parent_address','=',True)]}" -->
                                    <field name="city" placeholder="City" style="width: 40%%" />
                                    <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' on_change="onchange_state(state_id)" />
                                    <field name="zip" placeholder="ZIP" style="width: 20%%" />
                                </div>
                                <field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True}' />
                            </div>
                    </group>
                <field name="mailing_address" hidden="True" />
                    <!-- Fadderbevis -->
                                <group  attrs="{'invisible': [ ('mailing_address', '=', False)]}">
                                            <label for="street" string="Mailing Address"/>
                            <div>
                                <field name="mailing_street" placeholder="Street..."   />
                                <field name="mailing_street2"  />
                                <div class="address_format">
                                    <!-- attrs="{'readonly': [('use_parent_address','=',True)]}" -->
                                    <field name="mailing_city" placeholder="City" style="width: 40%%" />
                                    <field name="mailing_state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' on_change="onchange_state(state_id)" />
                                    <field name="mailing_zip" placeholder="ZIP" style="width: 20%%" />
                                </div>
                                <field name="mailing_country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True}' />
                            </div>
                    </group>


                <!-- context="{'default_parent_id" : active_id, 'default_start_date' : start_date}">  -->
<!--                <notebook colspan="4">
                    <page string="children">
                    <field name="sponsored_children" mode="kanban" conext="{'default_start_date' : start_date}">
                        <kanban>
                            <field name="start_date" />
                        </kanban>
                    </field>
                    </page>
                </notebook>
-->
                <label for="phone" />
<field name="phone" />
                <label for="sponsored_children" />
                            <field name="sponsored_children" readonly="True" />

                <label for="sponsor_info" />
<field name="sponsor_info" />
            </sheet>
</form>
            </field>
            </record>


        <record id="list_sponsorship" model="ir.ui.view">
            <field name="name">sponsorship_list_view</field>
            <field name="model">sponsorship</field>
            <field name="priority" eval="10" />
            <field name="arch" type="xml">
                <tree string="Sponsorships">
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="sponsored_child" />
                </tree>
            </field>
        </record>


        <record id="list_sponsorship_sponsor" model="ir.ui.view">
            <field name="name">sponsorship_list_view_sponsor</field>
            <field name="model">sponsorship</field>
            <field name="priority" eval="15" />
            <field name="arch" type="xml">
                <tree string="Sponsorships">
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="sponsor_id" />
                </tree>
            </field>
        </record>


        <record id="form_sponsorship" model="ir.ui.view">
            <field name="name">sponsorship_form_view</field>
            <field name="model">sponsorship</field>
            <field name="arch" type="xml">
                <form string="Sponsorships">
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="sponsor_id" />
                </form>
            </field>
        </record>

        <record id="action_sponsors" model="ir.actions.act_window">
            <field name="name">Sponsors</field>
            <field name="res_model">sponsor</field>
        </record>

        <record id="action_children" model="ir.actions.act_window">
            <field name="name">Children</field>
            <field name="res_model">sponsored_child</field>
        </record>


        <menuitem sequence="4" id="menu_sponsor" name="Sponsorship" />
        <menuitem id="menu_sponsorship_content" parent="menu_sponsor" name="Sponsor" />
        <menuitem id="menu_sponsorship_children" parent="menu_sponsorship_content" name="Sponsored Children" action="action_children" />
        <menuitem id="menu_sponsorship_sponsors" parent="menu_sponsorship_content" name="Sponsors" action="action_sponsors" />

    </data>
    </openerp>
